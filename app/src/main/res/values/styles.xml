<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Base.V23.AppTheme" />

    <style name="Base.V23.AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="minTouchTargetSize">0dp</item>
        <item name="android:navigationBarColor">#4D000000</item>
        <item name="android:statusBarColor">#4D000000</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
    </style>

    <style name="AppTheme.TextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/product_sans</item>
    </style>

    <style name="AppTheme.TextView.Roboto">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.GridOverlayCard">
        <item name="colorSecondary">@color/colorGridOverlayAccent</item>
    </style>

    <style name="AppTheme.MockupOverlayCard">
        <item name="colorSecondary">@color/colorMockupOverlayAccent</item>
    </style>

    <style name="AppTheme.ColorPickerCard">
        <item name="colorSecondary">@color/colorColorPickerAccent</item>
    </style>

    <style name="AppTheme.ScreenshotCard">
        <item name="colorSecondary">@color/colorScreenshotAccent</item>
    </style>

    <style name="AppDialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ScreenshotInfoSubHeading">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#a6a6a6</item>
    </style>

    <style name="ScreenshotInfoText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TransparentTheme" parent="Base.AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <declare-styleable name="DualColorPicker">
        <attr name="primaryColor" format="reference|color" />
        <attr name="secondaryColor" format="reference|color" />
    </declare-styleable>

</resources>
