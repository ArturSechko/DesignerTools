<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/app_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/qs_tiles_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:text="@string/qs_section_text"/>

            <fragment
                android:name="com.digitex.designertools.ui.GridOverlayCardFragment"
                android:id="@+id/grid_overlay_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/grid_overlay_content" />

            <fragment
                android:name="com.digitex.designertools.ui.MockupOverlayCardFragmnt"
                android:id="@+id/mock_overlay_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:layout="@layout/mockup_overlay_content" />

            <fragment
                android:name="com.digitex.designertools.ui.ColorPickerCardFragment"
                android:id="@+id/color_picker_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:layout="@layout/card_layout" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:text="@string/functions_section_text"/>

            <fragment
                android:name="com.digitex.designertools.ui.ScreenshotCardFragment"
                android:id="@+id/screenshot_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/card_layout" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>