<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/header"
            layout="@layout/app_header" />

        <TextView
            android:id="@+id/qsTilesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/qs_section_text"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <fragment
            android:id="@+id/grid_overlay_fragment"
            android:name="com.digitex.designertools.ui.fragment.GridOverlayCardFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/mock_overlay_fragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qsTilesTextView"
            tools:layout="@layout/include_grid_overlay" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="@string/functions_section_text"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/grid_overlay_fragment"
            app:layout_constraintStart_toStartOf="@id/grid_overlay_fragment"
            app:layout_constraintTop_toBottomOf="@id/grid_overlay_fragment" />

        <fragment
            android:id="@+id/screenshot_fragment"
            android:name="com.digitex.designertools.ui.fragment.ScreenshotCardFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/grid_overlay_fragment"
            app:layout_constraintStart_toStartOf="@id/grid_overlay_fragment"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout="@layout/card_layout" />

        <fragment
            android:id="@+id/mock_overlay_fragment"
            android:name="com.digitex.designertools.ui.fragment.MockupOverlayCardFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/grid_overlay_fragment"
            app:layout_constraintTop_toTopOf="@id/grid_overlay_fragment"
            tools:layout="@layout/include_mockup_overlay" />

        <fragment
            android:id="@+id/color_picker_fragment"
            android:name="com.digitex.designertools.ui.fragment.ColorPickerCardFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/mock_overlay_fragment"
            app:layout_constraintStart_toStartOf="@id/mock_overlay_fragment"
            app:layout_constraintTop_toBottomOf="@id/mock_overlay_fragment"
            tools:layout="@layout/card_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>